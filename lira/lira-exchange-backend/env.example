# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/lira-rub-exchange

# JWT for Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# TON Configuration
TON_ENDPOINT=https://toncenter.com/api/v2/jsonRPC
TON_API_KEY=your_ton_api_key_here

# Exchange Rate APIs
BINANCE_API_URL=https://api.binance.com/api/v3
CENTRAL_BANK_RU_API=https://www.cbr-xml-daily.ru/daily_json.js
CENTRAL_BANK_TR_API=https://evds2.tcmb.gov.tr/service/evds

# Rate Fetching Schedule (cron format)
RATE_UPDATE_SCHEDULE="*/15 * * * *"  # Every 15 minutes

# Fee Configuration
DEFAULT_FEE_PERCENTAGE=1.5
DEFAULT_MARKUP_PERCENTAGE=2.0

# Wallet Security
ENCRYPTION_KEY=your_encryption_key_for_wallet_secrets

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info 