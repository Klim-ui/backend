{
  "name": "lira-rub-exchange",
  "version": "1.0.0",
  "description": "Currency exchange application for TRY-RUB using TON",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "dev-full": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "npm install --legacy-peer-deps"
  },
  "dependencies": {
    "axios": "^1.3.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "ip-address": "10.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.9.1",
    "pg": "^8.16.0",
    "sequelize": "^6.37.7",
    "smart-buffer": "3.0.0",
    "socks": "2.6.2",
    "ton": "13.4.1",
    "ton-core": "0.53.0",
    "ton-crypto": "3.2.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20"
  }
}
